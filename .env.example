# Core app settings
APP_ENV=local
APP_VERSION=0.6.0
LOG_LEVEL=INFO
ALLOWED_ORIGINS=http://localhost:5173

# Google Workspace + OAuth
GOOGLE_WORKSPACE_DELEGATED_USER=admin@example.com
GOOGLE_WORKSPACE_CUSTOMER_ID=my_customer
GOOGLE_WORKSPACE_AUTH_SCHEMA=Authorization
GOOGLE_OAUTH_CLIENT_ID=replace-me.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=replace-me
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/oauth/callback
ALLOWED_HOSTED_DOMAIN=example.com
POST_LOGIN_REDIRECT_URL=http://localhost:5173/success
ADDITIONAL_SCOPES=group.read,custom.schema.read

# Session + cache
SESSION_SIGNING_SECRET=change-me
SESSION_COOKIE_NAME=ga_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax
REDIS_URL=redis://redis:6379/0
EFFECTIVEAUTH_TTL_SECONDS=300
CACHE_WARM_THRESHOLD_SECONDS=60

# Rate limiting / ACLs
AUTHZ_ALLOWED_NETWORKS=0.0.0.0/0
AUTHZ_RATE_LIMIT_REQUESTS=60
AUTHZ_RATE_LIMIT_WINDOW_SECONDS=60

# Service account JSON lives under private/
GOOGLE_SERVICE_ACCOUNT_FILE=private/gworkspace-465416-361687040922.json
